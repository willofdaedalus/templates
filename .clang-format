BasedOnStyle: LLVM
IndentWidth: 8
TabWidth: 8
UseTab: Always
ContinuationIndentWidth: 8
ColumnLimit: 80

AlwaysBreakAfterReturnType: None      # Return type on same line as function name
BinPackArguments: false               # Don't try to pack arguments onto fewer lines
BinPackParameters: false              # Don't try to pack parameters onto fewer lines
AllowAllParametersOfDeclarationOnNextLine: false  # Don't allow function declaration to put all parameters on the next line

# Break long lines at function calls and declarations
BreakBeforeBraces: Linux              # Linux-style braces
AlignAfterOpenBracket: Align          # Align parameters after open bracket

# C99 style comments (// instead of /**/)
SpacesInLineCommentPrefix:
  Minimum: 1
  Maximum: 1
CommentPragmas: '^ IWYU pragma:'      # Keep certain comment directives intact

# Other spacing and alignment preferences
SpaceBeforeParens: ControlStatements  # Space before control statement parentheses
SpaceAfterCStyleCast: true            # Space after C-style cast
SpaceBeforeAssignmentOperators: true  # Space around assignment operators
PointerAlignment: Right               # int *ptr style
MaxEmptyLinesToKeep: 2                # Keep at most 2 consecutive empty lines
IndentCaseLabels: false               # Don't indent case labels

# Function layout options
AllowShortFunctionsOnASingleLine: None  # Don't place short functions on a single line
AllowShortBlocksOnASingleLine: false    # Don't place short blocks on a single line
AllowShortIfStatementsOnASingleLine: false  # Don't place short if statements on a single line

# Include sorting (generally left to the developer)
SortIncludes: true

# Line break options
BreakStringLiterals: true             # Break long string literals
BreakBeforeBinaryOperators: None      # Don't break before binary operators

# Alignment options for consistency
AlignConsecutiveAssignments: None     # Don't align consecutive assignments
AlignConsecutiveDeclarations: None    # Don't align consecutive declarations
